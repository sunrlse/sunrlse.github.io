html, body {
    margin 0
    padding 0
    width 100%
    height 100%
}
body {
    background-color #24292e
    background-image url(https://desktop.github.com/images/star-bg.svg),linear-gradient(#191c20, #24292e 15%)
    background-repeat repeat-x
    background-position center 0, 0 0, 0 0
    color white
}

.fade-enter,
.fade-leave-to {
  opacity 0
}
.fade-enter-active,
.fade-leave-active {
  transition: opacity .5s
}

#cover {
  position absolute
  left 0
  top 0
  right 0
  bottom 0
  background-color #999
  opacity .3
  z-index -1
}

#loading {
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  background-color rgba(255,255,255,.3)
  z-index 99
  display flex
  align-items center
  justify-content center
}
